<?xml version="1.0" encoding="utf-8"?>
<Characteristic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schemas.bluetooth.org/Documents/characteristic.xsd"
  type="org.bluetooth.characteristic.battery_level"
  uuid="2A19"
  name="Battery Level"
  last-modified="2011-12-05"
  approved="Yes">
  <InformativeText>
    <Abstract>
            The current charge level of a battery. 100% represents fully charged while 0% represents fully discharged.
        </Abstract>
  </InformativeText>
  <Value>
    <Field
      name="Level">
      <Requirement>Mandatory</Requirement>
      <Format>uint8</Format>
      <Unit>org.bluetooth.unit.percentage</Unit>
      <Minimum>0.00000000000</Minimum>
      <Maximum>100.00000000000</Maximum>
      <Enumerations>
        <Reserved
          start="101"
          end="255" />
      </Enumerations>
    </Field>
  </Value>
</Characteristic>