<?xml version="1.0" encoding="utf-8"?>
<Profile xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://schemas.bluetooth.org/Documents/profile.xsd"
  name="Heart Rate"
  type="com.hepia.profile.heart_rate"
  uuid="df906084-4a83-4c1f-bb33-b623b734763f">
  <InformativeText>
    <Abstract>This profile enables a Collector device to connect and interact with a Heart Rate Sensor for use in fitness applications.</Abstract>
    <Summary>The Heart Rate Profile is used to enable a data collection device to obtain data from a Heart Rate Sensor that exposes the Heart Rate Service.</Summary>
  </InformativeText>
  <Role
    name="Heart Rate Sensor">
    <Service
      type="org.bluetooth.service.heart_rate">
      <Declaration>Primary</Declaration>
      <Requirement>Mandatory</Requirement>
    </Service>
    <Service
      type="org.bluetooth.service.battery_service">
      <Declaration>Primary</Declaration>
      <Requirement>Mandatory</Requirement>
    </Service>
    <Service
      type="com.hepia.service.smartcanton_devbox">
      <Declaration>Primary</Declaration>
      <Requirement>Mandatory</Requirement>
      <Characteristic
        type="com.hepia.characteristic.lora_app_eui">
        <Requirement>Mandatory</Requirement>
      </Characteristic>
      <Characteristic
        type="com.hepia.characteristic.lora_app_key">
        <Requirement>Mandatory</Requirement>
      </Characteristic>
    </Service>
    <Service
      type="org.bluetooth.service.generic_attribute">
      <Declaration>Primary</Declaration>
      <Requirement>Mandatory</Requirement>
    </Service>
    <Service
      type="org.bluetooth.service.device_information">
      <Declaration>Primary</Declaration>
      <Requirement>Mandatory</Requirement>
    </Service>
    <Service
      type="org.bluetooth.service.generic_access">
      <Declaration>Primary</Declaration>
      <Requirement>Mandatory</Requirement>
    </Service>
  </Role>
  <Role
    name="Collector">
    <Client
      type="org.bluetooth.service.heart_rate">
      <Requirement>Mandatory</Requirement>
    </Client>
    <Client
      type="org.bluetooth.service.device_information">
      <Requirement>Optional</Requirement>
    </Client>
    <Client
      type="org.bluetooth.service.battery_service">
      <Requirement>Mandatory</Requirement>
    </Client>
    <Client
      type="com.hepia.service.smartcanton_devbox">
      <Requirement>Mandatory</Requirement>
    </Client>
    <Client
      type="org.bluetooth.service.generic_attribute">
      <Requirement>Mandatory</Requirement>
    </Client>
    <Client
      type="org.bluetooth.service.device_information">
      <Requirement>Mandatory</Requirement>
    </Client>
    <Client
      type="org.bluetooth.service.generic_access">
      <Requirement>Mandatory</Requirement>
    </Client>
  </Role>
</Profile>