<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.LoginRegister" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:editTextColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Profile" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Bluetooth" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:listDivider">@color/colorTextPrimary</item>
        <item name="android:dividerHeight">1dp</item>

        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog.Alert</item>

        <item name="android:negativeButtonText">@color/colorAccent</item>
        <item name="android:positiveButtonText">@color/colorAccent</item>
        <item name="android:editTextColor">@color/colorTextPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:negativeButtonText">@color/colorAccent</item>
        <item name="android:positiveButtonText">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textAppearanceButton">@color/colorAccent</item>
        <item name="android:editTextColor">@color/colorTextPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:negativeButtonText">@color/colorAccent</item>
        <item name="android:positiveButtonText">@color/colorAccent</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:editTextColor">@color/colorTextPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
</resources>
