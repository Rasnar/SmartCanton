<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <!--android:paddingTop="@dimen/activity_vertical_margin"-->

        <Button
            android:id="@+id/btn_ble_connect_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin_top"
            android:drawableEnd="@drawable/ic_bluetooth_connect_white"
            android:paddingStart="@dimen/button_padding"
            android:text="@string/ble_btn_default_connect_msg"
            tools:ignore="RtlSymmetry" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_serv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_ble_connect_device"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            card_view:cardBackgroundColor="@color/colorCardViewBackground"
            card_view:cardCornerRadius="8dp">
            <!--card_view:contentPadding="25dp"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_cv_title_serv"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_cv_title_serv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/colorTextPrimary"
                        android:text="Server information"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/card_padding"
                        android:padding="@dimen/card_view_title_textview_padding"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_alignEnd="@+id/tv_cv_title_serv"
                        android:paddingEnd="@dimen/card_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_download_serv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_title_textview_padding"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_download_white"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_alignStart="@+id/tv_cv_title_serv"
                        android:paddingEnd="@dimen/card_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_upload_serv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_title_textview_padding"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_upload_white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_cv_title_serv"
                    android:layout_margin="@dimen/card_padding">

                    <TextView
                        android:id="@+id/tv_message_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:text="@string/cv_msg_waiting_for_server_response"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorAccent" />
                    <!--android:padding="@dimen/card_items_margin"-->

                    <TextView
                        android:id="@+id/tv_ble_title_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_message_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:text="Bluetooth"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tv_ble_mac_address_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ble_title_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_ble_passkey_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ble_mac_address_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_lora_title_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ble_passkey_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:text="LoRa"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tv_dev_eui_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_lora_title_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_app_eui_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_dev_eui_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_app_key_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_app_eui_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_device_owner_title_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_app_key_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:text="Owner"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/tv_owner_public_id_serv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_device_owner_title_serv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_ble_lora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_serv"
            android:layout_marginTop="@dimen/child_margin_top"
            android:textAlignment="center"
            android:paddingEnd="@dimen/card_items_margin"
            android:paddingStart="@dimen/card_items_margin"
            card_view:cardBackgroundColor="@color/colorCardViewBackground"
            card_view:cardCornerRadius="8dp">
            <!--card_view:contentPadding="25dp"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_cv_title_ble_lora"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_cv_title_ble_lora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimaryDark"
                        android:text="BLE LoRa Service"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/card_padding"
                        android:padding="@dimen/card_view_title_textview_padding"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_alignEnd="@+id/tv_cv_title_ble_lora"
                        android:paddingEnd="@dimen/card_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_ble_lora_download_device"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_title_textview_padding"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_download_white"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_alignStart="@+id/tv_cv_title_ble_lora"
                        android:paddingEnd="@dimen/card_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_ble_lora_upload_device"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_title_textview_padding"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_upload_white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_cv_title_ble_lora"
                    android:layout_margin="@dimen/card_padding">

                    <TextView
                        android:id="@+id/tv_lora_message_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:text="@string/card_msg_connect_bluetooth_first"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_lora_dev_eui_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_lora_message_device"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_lora_app_eui_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_lora_dev_eui_device"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_lora_network_join_status_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_lora_app_eui_device"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_lora_device_address_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_lora_network_join_status_device"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/card_items_margin"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_ble_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_ble_lora"
            android:layout_marginTop="@dimen/child_margin_top"
            android:textAlignment="center"
            card_view:cardBackgroundColor="@color/colorCardViewBackground"
            card_view:cardCornerRadius="8dp">
            <!--card_view:contentPadding="25dp"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_cv_title_ble_gps"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_cv_title_ble_gps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimaryDark"
                        android:text="BLE GPS Service"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:padding="@dimen/card_view_title_textview_padding"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_alignEnd="@+id/tv_cv_title_ble_gps"
                        android:paddingEnd="@dimen/card_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_ble_gps_download_device"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_view_title_textview_padding"
                            android:scaleType="fitStart"
                            android:layout_gravity="center"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_download_white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_ble_gps_notifs_switch"
                    android:layout_below="@+id/rl_cv_title_ble_gps"
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_gps_enable_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="BLE Notifications"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        tools:ignore="RtlSymmetry" />
                    <!--android:paddingTop="@dimen/card_items_margin"-->
                    <!--android:paddingBottom="@dimen/card_items_margin"-->

                    <Switch
                        android:id="@+id/sw_gps_enable_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="1dp"
                        android:layout_alignStart="@+id/tv_gps_enable_notifications"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_ble_gps_notifs_switch"
                    android:layout_margin="@dimen/card_padding">

                    <TextView
                        android:id="@+id/tv_gps_message_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:text="@string/card_msg_connect_bluetooth_first"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tv_gps_service_position_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_gps_message_device"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_gps_service_speed_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_gps_service_position_device"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_gps_service_course_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_gps_service_speed_device"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_gps_service_date_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_gps_service_course_device"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                    <TextView
                        android:id="@+id/tv_gps_service_time_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_gps_service_date_device"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:paddingEnd="@dimen/card_items_margin"
                        android:paddingStart="@dimen/card_items_margin"
                        android:layout_marginBottom="@dimen/card_items_margin"
                        android:layout_marginTop="@dimen/card_items_margin"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorTextPrimaryLightDark" />

                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>