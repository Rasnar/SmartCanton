<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_serv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            card_view:cardBackgroundColor="@color/colorCardViewBackground">
            <!--card_view:contentPadding="25dp"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--android:layout_margin="@dimen/card_padding"-->

                <TextView
                    android:id="@+id/tv_cv_title_serv"
                    android:text="Server information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimary"
                    android:background="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/tv_ble_title_serv"
                    android:text="Bluetooth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/tv_cv_title_serv"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/tv_ble_mac_address_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:layout_below="@+id/tv_ble_title_serv"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_ble_passkey_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ble_mac_address_serv"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_lora_title_serv"
                    android:text="LoRa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ble_passkey_serv"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/tv_dev_eui_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lora_title_serv"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_app_eui_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_dev_eui_serv"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_app_key_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_app_eui_serv"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_device_owner_title_serv"
                    android:text="Owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_app_key_serv"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/tv_owner_public_id_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_device_owner_title_serv"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_ble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="8dp"
            android:layout_below="@+id/card_serv"
            android:layout_marginTop="@dimen/child_margin_top"
            card_view:cardBackgroundColor="@color/colorCardViewBackground">
            <!--card_view:contentPadding="25dp"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--android:layout_margin="@dimen/card_padding"-->

                <TextView
                    android:id="@+id/tv_cv_title_device"
                    android:text="BLE Device information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimary"
                    android:background="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <!--LORA SERVICE-->
                <TextView
                    android:id="@+id/tv_lora_service_title_device"
                    android:text="BLE LoRa Service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/tv_cv_title_device"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <TextView
                    android:id="@+id/tv_lora_dev_eui_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:layout_below="@+id/tv_lora_service_title_device"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/tv_lora_app_eui_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lora_dev_eui_device"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/tv_lora_network_join_status_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lora_app_eui_device"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/tv_lora_device_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lora_network_join_status_device"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextPrimaryLightDark"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                    <!--GPS SERVICE-->
                <TextView
                    android:id="@+id/tv_gps_service_title_device"
                    android:text="BLE GPS Service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@+id/tv_lora_device_address"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_ble_connect_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_ble"
            android:layout_marginTop="@dimen/button_margin"
            android:drawableRight="@drawable/ic_bluetooth_connect_white"
            android:paddingLeft="@dimen/button_padding"
            android:text="Connect to Bluetooth device" />


    </RelativeLayout>
</ScrollView>